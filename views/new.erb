<h1>New Recipe Form</h1>

<form action="/recipes" method="post">
  <label for="name">Recipe name:</label><br>
  <input type="text" id="name" name="name"><br>
  <label for="description">Recipe description:</label><br>
  <input type="text" id="description" name="description"><br>
  <label for="rating">Rating</label><br>
  <input type="number" id="rating" name="rating" min="0" max="5" step="0.1"><br>
  <label for="prep_time">Preparation time (minutes)</label><br>
  <input type="number" id="prep_time" name="prep_time"><br><br>
  <input type="submit" value="Submit">
</form>
